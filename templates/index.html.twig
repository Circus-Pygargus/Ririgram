{% extends "base_template.html.twig" %}

{% block title %}
    Ririgram    
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="css/user-forms.css">
{% endblock %}

{% block content %}
    <main>
    <section id="title">
        <div class="container-fluid">
            <div class="container">
                <h1>Ririgram</h1>
            </div>
        </div>
    </section>

    <section>
        <div class="container-fluid">
            <div class="container">

                <!-- connexion form -->
                <form id="log-in_form" method="post" action="login">
                    <h2>Connexion</h2>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" value="{{ values.username }}">
                        {% if errors is defined %}
                        <ul class="errors">
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="{{ values.password }}">
                    </div>
                    <!-- send-login will be used in php to check the form content -->
                    <button type="submit" name="send-login" class="btn">Send</button>
                    {% if message is defined %}
                        <span class="text-danger">{{ message }}</span>
                    {% endif %}                     
                </form>

                <p>Pas encore de compte ?  <a href="register">S'enregistrer</a></p>
            </div>
        </div>
    </main>
{% endblock %}


{% block script %}
{% endblock %}